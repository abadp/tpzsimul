<!-- 4x4 Torus, Bubble Flow control , with multicast support, simple router -->
<Simulation id="T44-CT-MC">
   <Network            id="T44_CT_NOC_MC">
   <SimulationCycles   id=0>
   <StopInjectionAfterMsg id=0>
   <TrafficPattern     id="MODAL" type=EMPTY numMessTypes=5>
   <Seed               id=113>
   <Load               id=0.1>
   <MessageLength      id=1>
   <PacketLength       id=5>
   <LinkWidth          id=16>
   <NetworkClockRatio  id=1>
   <UnifyNetworks      id=1>      
</Simulation>

